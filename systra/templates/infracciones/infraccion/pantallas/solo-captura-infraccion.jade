#distintivo
{{codigo|safe }}
include cabecera.jade
.row
	h4
		.span8.offset2
			|CAPTURA DE INFRACCIÓN
br
.controls.controls-row
		.btn-add
			|FOLIO DE INFRACCION No. T- 
			input#folio_infraccion(type="text",placeholder="Folio")
legend Datos Generales
.controls.controls-row.bloque
	h5.agente En León Guanajuato, el suscrito AGENTE:
	.controls.controls-row
		.span2
			label No. Cobro
			input#nom-cobro-agente-inf.input-small.ui-autocomplete-input(type="text" )
		.span8
			.control-group	
				label Nombre
				input#nombre-agente-inf.input-xxlarge(type="text",autocomplete="off")
				span.help-inline
	.controls.controls-row
		.span4
			.control-group 
				label Fecha:
				#fecha-capt-inf.input-append.date
					input#fecha_inf(data-format="yyyy-MM-dd",type="text",placeholder="Fecha")
					span.add-on
						i(data-time-icon="icosystra-clock", data-date-icon="icosystra-calendar")
				span.help-inline
		.span4
			.control-group 
				label Hora:
				#hora-capt-inf.input-append.date
					input#hora_inf(data-format="hh:mm",type="text",placeholder="Hora")
					span.add-on
						i(data-time-icon="icosystra-clock", data-date-icon="icosystra-calendar")
				span.help-inline
		.span4
			.control-group
				label DELEGACION
				select#delegacion_spa_inf
				span.help-inline
	.controls.controls-row
		.span4
			.control-group 
				label COMANDANCIA
				select#comandancia_spa_inf
				span.help-inline
		.span4
			.control-group 
				label TURNO
				select#turno_spa_inf.input-short
				span.help-inline
include infracciones/infraccion/ManagerServicioParticularInf
br
.controls.controls-row.bloque
	.span12
		label
			| El conductor firmó la infracción correspondiente  
	.span2
		label.radio
			input#si_firmo_inf(type="radio",name="optionsv",value="SI")
			| SI
	.span2
		label.radio
			input#no_firmo_inf(type="radio",name="optionsv",value="NO")
			| NO

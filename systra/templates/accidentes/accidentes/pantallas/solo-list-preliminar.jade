							span.ascendente-select.icosystra-arrow-up
						else
							span.ordenamiento.icosystra-arrow-up
					a#ordenar_folio_desc(href="#res-bus") 
						if usados.order_by == 'lugar' and usados.order_tipo == 'desc' 
							span.ascendente-select.icosystra-arrow-down
						else
							span.ordenamiento.icosystra-arrow-down
		tbody
			if object_list 
				for pre in object_list
					if pre.activo == 0
						tr(id="{{pre.id}}").iniciados
							include accidentes/accidentes/rows-inicia/row-iniciados.jade
					if pre.activo == 1
						tr(id="{{pre.id}}").cancelados
							include accidentes/accidentes/rows-inicia/row-cancelados.jade
					if pre.activo == 2
						tr(id="{{pre.id}}").capturados
							include accidentes/accidentes/rows-inicia/row-capturados.jade
					if pre.activo == 3
						tr(id="{{pre.id}}").eliminados
							include accidentes/accidentes/rows-inicia/row-eliminados.jade

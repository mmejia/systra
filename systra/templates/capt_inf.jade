extends base
block estilos
	link(rel="stylesheet", href="/static/css/vendor/normalize.css")
	link(rel="stylesheet", href="/static/css/vendor/bootstrap-responsive.min.css")
	link(rel="stylesheet", href="/static/css/vendor/bootstrap.min.css")
	link(rel="stylesheet", href="/static/css/vendor/prettify.css")
